/* draft-list.wxss */
page {
  background: #f5f5f5;
}

.draft-list-container {
  padding: 20rpx 32rpx;
  min-height: 100vh;
}

/* 暂存列表 */
.draft-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.draft-item {
  position: relative;
  display: flex;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s ease;
}

.draft-item:last-child {
  border-bottom: none;
}

.draft-item:active {
  background-color: #f8f9fa;
}

.draft-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-right: 60rpx;
}

.draft-museum {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.draft-preview {
  margin: 4rpx 0;
}

.draft-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

.draft-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

.draft-time {
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
}

.draft-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.draft-tag {
  font-size: 22rpx;
  color: #ff8fa3;
  background: rgba(255, 107, 107, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  white-space: nowrap;
}

.draft-delete-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 77, 79, 0.1);
  transition: all 0.2s ease;
  z-index: 10;
}

.draft-delete-btn:active {
  background: rgba(255, 77, 79, 0.2);
  transform: scale(0.95);
}

.delete-icon {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) saturate(100%) invert(25%) sepia(85%) saturate(7482%) hue-rotate(355deg) brightness(98%) contrast(101%);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

