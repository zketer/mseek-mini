/**points/mall.wxss**/
page { background-color: #f5f5f5; }
.container { padding: 60rpx 32rpx; }
.unimplemented-notice { background: linear-gradient(135deg, #fff3e0, #ffcc80); border-radius: 20rpx; padding: 40rpx; text-align: center; border-left: 8rpx solid #ff9800; }
.notice-content { display: flex; flex-direction: column; align-items: center; margin-bottom: 30rpx; }
.notice-icon { width: 120rpx; height: 120rpx; margin-bottom: 20rpx; opacity: 0.6; }
.notice-text { text-align: center; }
.notice-title { font-size: 32rpx; font-weight: 600; color: #e65100; display: block; margin-bottom: 12rpx; }
.notice-desc { font-size: 26rpx; color: #e65100; opacity: 0.8; }
.notice-actions { display: flex; justify-content: center; }
.action-btn { background: #ff9800; color: white; padding: 20rpx 40rpx; border-radius: 40rpx; font-size: 26rpx; }
