/**exhibitions/list.wxss**/
page {
  background-color: #f5f5f5;
}

.page-container {
  min-height: 100vh;
}

/* 头部容器 */
.header-container {
  background: linear-gradient(135deg, #ffb3b3 0%, #ffd1d1 100%);
  padding: 20rpx 32rpx 30rpx;
}

/* 搜索容器 */
.search-container {
  margin-bottom: 24rpx;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

.search-clear {
  padding: 6rpx;
  margin-left: 8rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.filter-tab {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.filter-tab.active {
  color: #ff8fa3;
  background: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 展览列表 */
.exhibition-list {
  padding: 0 32rpx;
}

.list-header {
  padding: 24rpx 0 16rpx 0;
}

.list-count {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 展览项目 */
.exhibition-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.exhibition-image {
  width: 200rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.exhibition-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.exhibition-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.exhibition-museum {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.exhibition-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.time-label {
  margin-right: 8rpx;
}

.time-text {
  color: #666;
}

/* 展览状态和标签 */
.exhibition-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: wrap;
}

.exhibition-status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-0 {
  background: #f5f5f5;
  color: #999;
}

.status-1 {
  background: #e8f5e8;
  color: #52c41a;
}

.status-2 {
  background: #e6f7ff;
  color: #1890ff;
}

.exhibition-permanent {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  background: #fff7e6;
  color: #fa8c16;
  font-weight: 500;
}

.exhibition-price {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  background: #fff0f6;
  color: #eb2f96;
  font-weight: 500;
}

.exhibition-free {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  background: #f6ffed;
  color: #52c41a;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  padding: 40rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}
