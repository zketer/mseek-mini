/**about.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
}

/* 应用信息 */
.app-section {
  margin: 0 32rpx 40rpx;
}

.app-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.app-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.app-item:last-child {
  border-bottom: none;
}

.app-content {
  flex: 1;
}

.app-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.app-description {
  font-size: 24rpx;
  color: #666;
}

.app-arrow {
  margin-left: 16rpx;
}

/* 通用区域样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 功能特色 */
.features-section {
  margin: 40rpx 32rpx;
}

.features-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  border-radius: 16rpx;
  padding: 16rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.feature-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 协议与说明 */
.legal-section {
  margin: 0 32rpx 40rpx;
}

.legal-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.legal-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.legal-item:last-child {
  border-bottom: none;
}

.legal-content {
  flex: 1;
}

.legal-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.legal-description {
  font-size: 24rpx;
  color: #666;
}

.legal-arrow {
  margin-left: 16rpx;
}

/* 联系我们 */
.contact-section {
  margin: 0 32rpx 40rpx;
}

.contact-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  margin-right: 24rpx;
}

.contact-content {
  flex: 1;
}

.contact-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.contact-value {
  font-size: 24rpx;
  color: #666;
}


/* 更新日志 */
.changelog-section {
  margin: 0 32rpx 40rpx;
}

.changelog-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.changelog-item {
  border-bottom: 2rpx solid #f0f0f0;
}

.changelog-item:last-child {
  border-bottom: none;
}

.changelog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  cursor: pointer;
}

.changelog-version {
  font-size: 30rpx;
  font-weight: 600;
  color: #ff8fa3;
  flex: 1;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.changelog-date {
  font-size: 26rpx;
  color: #666;
}

.expand-icon {
  transition: transform 0.3s ease;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.changelog-content {
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.changelog-content.collapsed {
  max-height: 0;
}

.changelog-content.expanded {
  max-height: none;
}

.changelog-features {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 0 32rpx 32rpx 32rpx;
}

.feature-line {
  display: flex;
  align-items: flex-start;
}

.feature-bullet {
  font-size: 26rpx;
  color: #ff8fa3;
  margin-right: 16rpx;
  margin-top: 2rpx;
  font-weight: 600;
}

.feature-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  flex: 1;
}


/* 版权信息 */
.copyright-section {
  margin: 0 32rpx 40rpx;
  text-align: center;
}

.copyright {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.copyright-text {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.company-info {
  font-size: 22rpx;
  color: #999;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}
