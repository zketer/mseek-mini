/**index.wxss**/
page {
  background-color: #f5f5f5;
}

.page-container {
  min-height: 100vh;
}

/* 轮播图 */
.banner-section {
  margin: 20rpx 32rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.banner-swiper {
  height: 380rpx;
  border-radius: 24rpx;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: 40rpx 30rpx 30rpx;
  color: white;
}

.banner-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 公告栏 */
.notice-section {
  margin: 0 32rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.notice-container {
  display: flex;
  align-items: center;
}

.notice-icon {
  margin-right: 16rpx;
}

.notice-swiper {
  flex: 1;
  height: 40rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
}

/* 快速入口 */
.quick-entry-section {
  margin: 0 32rpx 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 20rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.quick-entry-grid {
  display: flex;
  justify-content: space-around;
}

.quick-entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.quick-entry-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 158, 0.3);
}

.entry-icon {
  width: 50rpx;
  height: 50rpx;
}

.quick-entry-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 区域样式 */
.section {
  margin: 0 32rpx 50rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 30rpx;
}

.section-title {
  flex: 1;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.title-subtitle {
  font-size: 24rpx;
  color: #999;
}

.section-more {
  display: flex;
  align-items: center;
}

.more-text {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.more-icon {
  transform: rotate(90deg);
}

/* 博物馆列表 */
.museum-scroll {
  white-space: nowrap;
}

.museum-list {
  display: inline-flex;
  padding-bottom: 20rpx;
}

.museum-card {
  width: 280rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-right: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.museum-card:active {
  transform: scale(0.98);
}

.museum-image-container {
  position: relative;
  width: 100%;
  height: 180rpx;
}

.museum-image {
  width: 100%;
  height: 100%;
}

.museum-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  color: white;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.museum-info {
  padding: 24rpx 20rpx;
}

.museum-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.museum-location {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.location-text {
  font-size: 22rpx;
  color: #999;
  margin-left: 8rpx;
}

.museum-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.museum-rating {
  display: flex;
  align-items: baseline;
}

.rating-score {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff8fa3;
}

.rating-label {
  font-size: 20rpx;
  color: #ff8fa3;
  margin-left: 4rpx;
}

.museum-price {
  font-size: 22rpx;
  color: #ff8fa3;
  font-weight: 500;
}

/* 博物馆标签 */
.museum-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  margin-top: 8rpx;
}

.tag {
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 120rpx;
}

.backend-tag {
  color: #333;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 16rpx;
  padding: 2rpx 6rpx;
}

.rating-tag {
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1) !important;
  color: white !important;
  border: none !important;
  display: flex;
  align-items: center;
  gap: 2rpx;
}

.rating-score {
  font-size: 16rpx;
  font-weight: 600;
  color: white;
}

.rating-star {
  font-size: 14rpx;
  color: white;
}

/* 展览列表 */
.exhibition-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.exhibition-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.exhibition-card:active {
  transform: scale(0.98);
}

.exhibition-image {
  width: 160rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.exhibition-info {
  flex: 1;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.exhibition-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exhibition-museum {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.exhibition-date {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.exhibition-status {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
  font-weight: 500;
}

.status-active {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
  color: white;
}

.status-upcoming {
  background: #f8f8f8;
  color: #666;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}

/* API待对接标记样式 */
.api-todo-mark {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(255, 152, 0, 0.9);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  z-index: 10;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(255, 152, 0, 0.3);
}

.api-todo-mini {
  display: inline-block;
  background: rgba(255, 152, 0, 0.8);
  color: white;
  font-size: 16rpx;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  margin-left: 8rpx;
  font-weight: bold;
  vertical-align: middle;
}

/* 搜索框特殊定位 */
.search-box {
  position: relative;
}

/* 标题区域特殊定位 */
.section-title {
  position: relative;
}