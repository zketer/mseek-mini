/**museum/list.wxss**/
page {
  background-color: #f5f5f5;
}

.container {
  padding: 60rpx 32rpx;
}

.unimplemented-notice {
  background: linear-gradient(135deg, #e3f2fd, #bbdefb);
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
  border-left: 8rpx solid #2196f3;
}

.notice-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.notice-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.notice-text {
  text-align: center;
}

.notice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1976d2;
  display: block;
  margin-bottom: 12rpx;
}

.notice-desc {
  font-size: 26rpx;
  color: #1976d2;
  opacity: 0.8;
}

.notice-actions {
  display: flex;
  justify-content: center;
}

.action-btn {
  background: #2196f3;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
}
