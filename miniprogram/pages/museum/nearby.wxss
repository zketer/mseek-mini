/* nearby.wxss - 附近博物馆页面样式 */
page {
  background-color: #f5f5f5;
}

.page-container {
  min-height: 100vh;
}

/* 定位信息 */
/* 头部容器 */
.header-container {
  background: linear-gradient(135deg, #ffb3b3 0%, #ffd1d1 100%);
  margin-bottom: 16rpx;
}

/* 头部行 */
.header-row {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  gap: 24rpx;
}

/* 定位信息 */
.location-info {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

/* 搜索容器 */
.search-container {
  flex: 1;
  min-width: 0;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

.search-clear {
  padding: 6rpx;
  margin-left: 8rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #ff4757;
}

.location-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  margin-right: 12rpx;
}


/* 博物馆列表 */
.museum-list {
  padding: 0 32rpx;
}

.list-header {
  padding: 24rpx 0 16rpx 0;
}

.list-count {
  font-size: 26rpx;
  color: #666;
}

/* 博物馆卡片 */
.museum-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: flex;
  padding: 24rpx;
}

.museum-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.museum-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.museum-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.museum-location {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.museum-location .location-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

/* 博物馆元信息 */
.museum-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 8rpx;
}

.distance,
.collection-count {
  font-size: 22rpx;
  color: #666;
  background: #f8f8f8;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 标签 */
.museum-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.tag {
  font-size: 20rpx;
  color: #666;
  background: #f0f8ff;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e1f0fe;
}

/* 描述 */
.museum-description {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 加载状态 */
.loading-container {
  padding: 60rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 定位错误 */
.location-error {
  padding: 120rpx 60rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.error-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.retry-button,
.setting-button {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin: 0 8rpx;
}

.setting-button {
  background: #52c41a;
}

/* 空状态 */
.empty-container {
  padding: 120rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 40rpx;
  display: block;
}

.empty-button {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 没有更多数据 */
.no-more-container {
  padding: 40rpx 0;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}