/**museum/detail.wxss**/
page {
  background-color: #f5f5f5;
}

.page-container {
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ffb3b3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 错误状态 */
.error-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  padding: 64rpx 32rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.retry-btn {
  background: #ffb3b3;
  color: #fff;
  border: none;
  border-radius: 60rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
}

/* 图片轮播 */
.image-section {
  position: relative;
  height: 500rpx;
}

.image-swiper {
  height: 100%;
}

.detail-image {
  width: 100%;
  height: 100%;
}


/* SVG图标样式 */
.svg-icon {
  width: 32rpx;
  height: 32rpx;
}

.favorite-icon {
  /* 已收藏：显示金黄色 */
  filter: none;
}

.favorite-icon-outline {
  /* 未收藏：显示深灰色 */
  filter: brightness(0) saturate(100%) invert(40%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(96%) contrast(86%);
}

.navigation-icon {
  filter: brightness(0) invert(1);
}

.navigation-icon-dark {
  /* 深色版本的导航图标 */
  filter: brightness(0) saturate(100%) invert(40%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(96%) contrast(86%);
}


/* 博物馆信息 */
.info-section {
  background: #fff;
  padding: 30rpx 32rpx;
  margin-bottom: 20rpx;
}

.museum-header {
  margin-bottom: 20rpx;
}

.title-with-actions {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.museum-title {
  flex: 1;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-right: 16rpx;
}

.header-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 4rpx;
}

.header-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  transition: all 0.2s ease;
}

.header-btn:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.museum-rating {
  display: flex;
  align-items: baseline;
}

.rating-score {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff8fa3;
  margin-right: 8rpx;
}

.rating-total {
  font-size: 24rpx;
  color: #999;
}

.museum-meta {
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 12rpx;
}

.museum-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

/* 博物馆标签 */
.museum-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
}

.tag {
  font-size: 20rpx;
  padding: 8rpx 12rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-weight: 500;
}

/* 评分标签 */
.rating-tag {
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  color: white;
  border: none;
}

.rating-score-tag {
  font-size: 18rpx;
  font-weight: 600;
  color: white;
}

.rating-star {
  font-size: 16rpx;
  color: white;
}

/* 价格标签 */
.price-tag {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.price-icon {
  font-size: 16rpx;
}

.price-text {
  font-size: 18rpx;
  font-weight: 600;
}

/* 状态标签 */
.status-tag {
  font-weight: 600;
}

.status-tag.open {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: white;
}

.status-tag.closed {
  background: linear-gradient(135deg, #f44336, #d32f2f);
  color: white;
}

/* 特色标签 */
.feature-tag {
  background: rgba(255, 107, 107, 0.1);
  color: #ff8fa3;
  border: 1rpx solid rgba(255, 107, 107, 0.2);
}

/* 免费开放样式 */
.free-admission {
  color: #4CAF50 !important;
  font-weight: 600;
}

/* 博物馆统计信息 */
.stats-section {
  margin-top: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-radius: 16rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 16rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff8fa3;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}


/* 自定义图标样式 */
.icon-star {
  font-size: 32rpx;
  font-weight: normal;
}

.star-filled {
  color: #fff;
}

.star-outline {
  color: #ff8fa3;
}


/* 区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

/* 博物馆介绍 */
.description-section {
  background: #fff;
  padding: 30rpx 32rpx;
  margin-bottom: 20rpx;
}

.description-content {
  position: relative;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.ellipsis-text {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.full-text {
  display: block;
}

.toggle-btn {
  color: #ff8fa3;
  font-size: 26rpx;
  margin-top: 12rpx;
}



/* 参观须知 */
.notice-section {
  background: #fff;
  padding: 30rpx 32rpx;
  margin-bottom: 20rpx;
}

.notice-list {
  margin-top: 20rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

.notice-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

.notice-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 联系方式 */
.contact-section {
  background: #fff;
  padding: 30rpx 32rpx;
  margin-bottom: 20rpx;
}

.contact-list {
  margin-top: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.contact-item:active {
  background-color: rgba(102, 126, 234, 0.05);
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.phone-number {
  color: #ff6b6b !important;
  font-weight: 500;
  text-decoration: underline;
}

.website-link {
  color: #ff6b6b !important;
  font-weight: 500;
  text-decoration: underline;
}

/* 门票信息 */
.ticket-section {
  background: #fff;
  padding: 30rpx 32rpx;
  margin-bottom: 20rpx;
}

.ticket-content {
  margin-top: 20rpx;
}

.ticket-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}
