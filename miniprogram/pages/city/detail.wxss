/* city/detail.wxss */
page {
  background-color: #f5f5f5;
}

.page-container {
  min-height: 100vh;
}

/* Loading State */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(34, 139, 34, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 28rpx;
}

/* City Header */
.city-header {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  border-radius: 20rpx;
  margin: 20rpx 16rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.header-content {
  text-align: center;
}

.city-title {
  margin-bottom: 32rpx;
}

.city-name {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.city-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Stats Cards */
.city-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 20rpx;
  border-radius: 16rpx;
  min-width: 120rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.25);
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  color: #fff;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Progress Bar */
.city-progress {
  margin-top: 16rpx;
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #fff, #00f2fe);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* Filter Section */
.filter-section {
  padding: 24rpx 16rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.filter-tabs {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  padding: 16rpx;
  text-align: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-right: 12rpx;
  transition: all 0.3s ease;
}

.filter-tab:last-child {
  margin-right: 0;
}

.filter-tab.active {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: #fff;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
}


/* Museums Section */
.museums-section {
  padding: 0 16rpx;
  margin-bottom: 32rpx;
}

.museums-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.museum-card {
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  overflow: hidden;
}

.museum-card.visited {
  border: 2rpx solid #4facfe;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.2);
}

.museum-card.unvisited {
  border: 2rpx solid #e9ecef;
  opacity: 0.8;
}

/* 未访问博物馆的灰色调 */
.museum-card.unvisited .default-logo {
  background: #bbb;
}

.museum-card.unvisited .museum-name,
.museum-card.unvisited .museum-level {
  color: #888;
}

.museum-card.unvisited .level-tag {
  background: #ddd !important;
  color: #888 !important;
}

.museum-card.unvisited .distance,
.museum-card.unvisited .ticket-price {
  color: #999;
}

/* 已移除复杂的足迹状态效果 */

.museum-logo {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  height: 120rpx;
}

.default-logo {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

/* 已移除旧的grayscale样式，改用统一的unvisited样式 */

.museum-icon {
  font-size: 48rpx;
}

.checkin-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background: #4facfe;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
  z-index: 2;
}

.badge-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

/* 已移除复杂的遮罩层样式 */

.museum-info {
  text-align: center;
  position: relative;
  z-index: 2;
}

.museum-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.museum-level {
  font-size: 24rpx;
  color: #666;
  display: block;
  text-align: center;
}

/* 未访问博物馆的等级信息样式 */
.museum-card.unvisited .museum-level {
  color: #999;
}

.visit-info {
  margin-top: 12rpx;
}

.visit-date {
  font-size: 22rpx;
  color: #4facfe;
  display: block;
  margin-bottom: 6rpx;
}

.rating {
  display: flex;
  align-items: center;
  justify-content: center;
}

.rating-text {
  font-size: 22rpx;
  color: #ff6b35;
  margin-right: 4rpx;
}

.star {
  font-size: 24rpx;
}

/* 统一的详细信息显示区域 */
.detail-info {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.distance {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 6rpx;
}

.ticket-price {
  font-size: 22rpx;
  color: #28a745;
}

.level-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 600;
  z-index: 2;
}

.level-national {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: #fff;
}

.level-first-class {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: #fff;
}

.level-professional {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  color: #666;
}

.level-text {
  font-size: 20rpx;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 24rpx;
  display: block;
}

.empty-action {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #4facfe, #00f2fe);
  color: #fff;
  border-radius: 24rpx;
  display: inline-block;
}

.action-text {
  font-size: 28rpx;
}

/* Bottom Spacing */
.bottom-spacing {
  height: 40rpx;
}
