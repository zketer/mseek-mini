/* checkin-detail.wxss */
.checkin-detail-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background: #f5f5f5;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #ffb3b3;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 40rpx;
}

.error-content {
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 16rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 32rpx;
}

.retry-btn {
  background: #ffb3b3;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
}

/* 详情滚动区域 */
.detail-scroll {
  height: 100vh;
}

/* 头部信息 */
.detail-header {
  background: white;
  padding: 32rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  margin: 16rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  position: relative;
  transition: all 0.2s ease;
}

.detail-header:active {
  background: #f8f8f8;
  transform: scale(0.98);
}

.museum-info {
  margin-bottom: 24rpx;
}

.museum-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.museum-location {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.museum-address {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.checkin-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.date {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.time {
  font-size: 24rpx;
  color: #666;
}

/* 箭头指示器 */
.arrow-indicator {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.arrow-icon {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

/* 打卡内容卡片 */
.checkin-content-card {
  background: white;
  border-radius: 16rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  overflow: hidden;
}


.card-actions {
  display: flex;
  flex-direction: row;
  gap: 12rpx;
  align-items: center;
  flex-shrink: 0;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  background: transparent;
  border: none;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  opacity: 0.6;
}

.action-icon-img {
  width: 32rpx;
  height: 32rpx;
}

/* 卡片内部区域样式 - 分块设计 */
.checkin-content-card .photos-section,
.checkin-content-card .notes-section,
.checkin-content-card .rating-mood-section,
.checkin-content-card .companions-section,
.checkin-content-card .tags-section {
  background: white;
  margin: 0;
  border-radius: 0;
  padding: 32rpx;
  box-shadow: none;
  border-bottom: 2rpx solid #eee;
  position: relative;
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 最后一个区域不需要底边框 */
.checkin-content-card .tags-section {
  border-bottom: none;
}


/* 保留原有的通用样式用于其他地方 */
.actions-section {
  background: white;
  margin: 16rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

/* 通用标题样式 */
.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  width: 100%;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.title-group {
  display: flex;
  align-items: center;
  gap: 8rpx;
}


.photo-count {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 照片网格 */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.photo-item {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

/* 笔记内容 */
.notes-content {
  line-height: 1.6;
}

.notes-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 评分心情区域 */
.rating-mood-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.rating-item,
.mood-item,
.weather-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-label {
  font-size: 28rpx;
  color: #666;
}

.rating-stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 24rpx;
  color: #ddd;
}

.star.filled {
  color: #ffa500;
}

.mood-value,
.weather-value {
  font-size: 28rpx;
  color: #333;
  padding: 8rpx 16rpx;
  background: #f0f0f0;
  border-radius: 16rpx;
}

/* 同行伙伴 */
.companions-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.companion-item {
  font-size: 24rpx;
  color: #ff8fa3;
  background: rgba(255, 107, 107, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.3);
}

/* 标签 */
.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  font-size: 24rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(82, 196, 26, 0.3);
}



/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}
