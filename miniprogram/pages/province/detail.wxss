/* detail.wxss */
page {
  background-color: #f5f5f5;
}

.page-container {
  min-height: 100vh;
}

/* Loading State */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 107, 107, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.loading-text {
  font-size: 28rpx;
}

/* Province Header */
.province-header {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  border-radius: 20rpx;
  margin: 20rpx 16rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.header-content {
  text-align: center;
}

.province-title {
  margin-bottom: 32rpx;
}

.province-name {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.province-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Stats Cards */
.province-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 20rpx;
  border-radius: 16rpx;
  min-width: 120rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.25);
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  color: #fff;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* Province Progress */
.province-progress {
  margin-top: 24rpx;
}

/* View Mode Tabs */
.view-mode-tabs {
  display: flex;
  margin-top: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 8rpx;
}

.mode-tab {
  flex: 1;
  padding: 16rpx;
  text-align: center;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.mode-tab.active {
  background: rgba(255, 255, 255, 0.2);
}

.mode-text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
}

.mode-tab.active .mode-text {
  color: #fff;
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #fff;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* Filter and Sort */
.filter-section {
  padding: 24rpx 32rpx;
  background: #f5f5f5;
}

/* Filter Tabs */
.filter-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: white;
  border-radius: 24rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.filter-tab.active {
  background: #ffb3b3;
  border-color: #ffb3b3;
}

.tab-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.filter-tab.active .tab-text {
  color: white;
}


/* Museums List */
.museums-section {
  background: #f5f5f5;
  padding: 0 32rpx 32rpx;
}

.museums-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

/* Museum Cards */
.museum-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.museum-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.museum-card.visited {
  border: 3rpx solid #4CAF50;
}

.museum-card.unvisited {
  border: 2rpx solid #e9ecef;
  opacity: 0.8;
}

/* 未访问博物馆的灰色调 */
.museum-card.unvisited .default-logo {
  background: #bbb;
}

.museum-card.unvisited .level-tag {
  background: #ddd !important;
  color: #888 !important;
}

.museum-card.unvisited .distance,
.museum-card.unvisited .ticket-price {
  color: #999;
}

/* Museum Logo */
.museum-logo {
  position: relative;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.logo-image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #f8f8f8;
  padding: 8rpx;
  transition: all 0.3s ease;
}

.logo-image.grayscale {
  filter: grayscale(1);
  opacity: 0.6;
}

/* Default Logo */
.default-logo {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.default-logo.grayscale {
  filter: grayscale(1);
  opacity: 0.6;
}

.museum-icon {
  font-size: 32rpx;
  color: white;
}

/* Checkin Badge */
.checkin-badge {
  position: absolute;
  top: -6rpx;
  right: 8rpx;
  width: 24rpx;
  height: 24rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.4);
}

.badge-icon {
  font-size: 14rpx;
  color: white;
  font-weight: 600;
}

/* 已移除复杂的遮罩层样式 */

/* Museum Info */
.museum-info {
  margin-bottom: 12rpx;
}

.museum-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
  line-height: 1.3;
  min-height: 62rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.museum-card.unvisited .museum-name {
  color: #999;
}

.museum-level {
  font-size: 24rpx;
  color: #666;
  display: block;
  text-align: center;
}

/* 未访问博物馆的等级信息样式 */
.museum-card.unvisited .museum-level {
  color: #999;
}

/* 统一的详细信息显示区域 */
.detail-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  align-items: center;
}

/* Visit Info (保持兼容) */
.visit-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.visit-date {
  font-size: 18rpx;
  color: #4CAF50;
  font-weight: 500;
}

.rating {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.rating-text {
  font-size: 18rpx;
  color: #FF9800;
  font-weight: 600;
}

.star {
  font-size: 22rpx;
}

/* Unvisit Info */
.unvisit-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.distance {
  font-size: 18rpx;
  color: #666;
}

.ticket-price {
  font-size: 18rpx;
  color: #ff8fa3;
  font-weight: 500;
}

/* Level Tags */
.level-tag {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 16rpx;
}

.level-tag.level-national {
  background: #FF9800;
  color: white;
}

.level-tag.level-first-class {
  background: #4CAF50;
  color: white;
}

.level-tag.level-professional {
  background: #2196F3;
  color: white;
}

.level-text {
  font-size: 16rpx;
  font-weight: 600;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  background: #f5f5f5;
  border-radius: 32rpx 32rpx 0 0;
  min-height: 60vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 32rpx;
}

.empty-action {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #ffb3b3;
  color: white;
  border-radius: 24rpx;
  font-size: 26rpx;
}

.action-text {
  color: white;
}

/* Cities Section */
.cities-section {
  padding: 0 16rpx;
  margin-bottom: 32rpx;
}

.cities-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

/* 城市网格响应式调整 */
@media (max-width: 375px) {
  .cities-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12rpx;
  }
}

.city-card {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  text-align: center;
}

.city-card.unlocked {
  border: 2rpx solid #ffb3b3;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.2);
}

.city-card.locked {
  border: 2rpx solid #e9ecef;
  opacity: 0.7;
}

.city-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  height: 80rpx;
}

.city-emoji {
  font-size: 48rpx;
}

.city-info {
  text-align: center;
  margin-bottom: 12rpx;
}

.city-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
  line-height: 1.2;
}

.city-stats {
  font-size: 20rpx;
  color: #ff8fa3;
  display: block;
  line-height: 1.2;
}

.city-locked {
  font-size: 20rpx;
  color: #999;
  display: block;
  line-height: 1.2;
}

.completion-indicator {
  margin-top: 8rpx;
}

.completion-bar {
  height: 4rpx;
  background: #e9ecef;
  border-radius: 2rpx;
  overflow: hidden;
}

.completion-fill {
  height: 100%;
  background: linear-gradient(90deg, #ffb3b3, #ffd1d1);
  border-radius: 2rpx;
  transition: width 0.3s ease;
}

.unlock-badge {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 28rpx;
  height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-text {
  font-size: 16rpx;
}

/* Bottom Spacing */
.bottom-spacing {
  height: 40rpx;
  background: #f5f5f5;
}

/* Responsive */
@media (max-width: 375px) {
  .museums-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .museum-card {
    padding: 20rpx 12rpx;
  }
  
  .logo-image {
    width: 56rpx;
    height: 56rpx;
  }
  
  .museum-name {
    font-size: 22rpx;
    min-height: 56rpx;
  }
}

/* Loading Animation */
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.loading-icon {
  animation: pulse 1.5s infinite;
}

/* Badge Animation */
@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-4rpx); }
  60% { transform: translateY(-2rpx); }
}

.checkin-badge {
  animation: bounce 2s infinite;
}
