.header-actions {
  display: flex;
  justify-content: center;
  margin-top: 24rpx;
}

.view-mode-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 28rpx;
  padding: 6rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 24rpx;
  border-radius: 22rpx;
  min-width: auto;
  transition: all 0.2s ease;
}

.mode-tab.active {
  background: white;
}

.mode-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  white-space: nowrap;
}

.mode-tab.active .mode-text {
  color: #ff8fa3;
}
/* user/favorites.wxss */
page {
  background: #ffffff;
}

.page-container {
  min-height: 100vh;
}

/* 收藏概览 */
.favorites-header {
  padding: 40rpx 32rpx;
  color: #fff;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  border-radius: 16rpx;
  margin: 20rpx 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.header-content {
  text-align: center;
}

.stats-overview {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 40rpx;
}

/* 进度条 */
.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: white;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 标签切换 */
.tabs-section {
  padding: 16rpx 32rpx 24rpx;
}

.tab-container {
  display: flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 28rpx;
  padding: 6rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 24rpx;
  border-radius: 22rpx;
  transition: all 0.2s ease;
}

.tab-item.active {
  background: white;
}

.tab-text {
  font-size: 26rpx;
  color: white;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #ff8fa3;
}

.tab-count {
  font-size: 22rpx;
  color: white;
  margin-left: 8rpx;
  opacity: 0.8;
}

.tab-item.active .tab-count {
  color: #ff8fa3;
  opacity: 1;
}

/* 筛选和排序 */
.filter-section {
  padding: 24rpx 32rpx;
  background: #f5f5f5;
}

.filter-tabs {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 16rpx;
  background: white;
  border-radius: 20rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.filter-tab.active {
  background: #ffb3b3;
  border-color: #ffb3b3;
}

.filter-tab .tab-text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.filter-tab.active .tab-text {
  color: white;
}

.sort-options {
  display: flex;
  gap: 12rpx;
}

.sort-btn {
  padding: 10rpx 16rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.2s ease;
}

.sort-btn.active {
  background: #ffb3b3;
  border-color: #ffb3b3;
}

.sort-text {
  font-size: 22rpx;
  color: #666;
}

.sort-btn.active .sort-text {
  color: white;
}

/* 博物馆列表 */
.museums-section {
  background: #f5f5f5;
  padding: 0 32rpx 32rpx;
}

.museum-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 博物馆卡片 */
.museum-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.museum-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.museum-card.visited {
  border: 2rpx solid #4CAF50;
}

/* 博物馆图片 */
.museum-image {
  position: relative;
  height: 200rpx;
}

.museum-image .image {
  width: 100%;
  height: 100%;
}

.visited-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: #4CAF50;
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 详情页同款收藏星标位置与大小 */
.fav-star {
  position: absolute;
  top: 12rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: rgba(255,255,255,0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  z-index: 10;
}
.fav-star-icon {
  width: 28rpx;
  height: 28rpx;
}

.visited-badge .badge-text {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

/* 博物馆内容 */
.museum-content {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.museum-main {
  flex: 1;
}

.museum-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.museum-location {
  font-size: 24rpx;
  color: #ff8fa3;
  display: block;
  margin-bottom: 6rpx;
}

.museum-address {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

/* 博物馆标签 */
.museum-meta {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.level-tag,
.category-tag,
.price-tag {
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.level-tag {
  background: #FF9800;
  color: white;
}

.category-tag {
  background: #2196F3;
  color: white;
}

.price-tag {
  background: #4CAF50;
  color: white;
}

.level-text,
.category-text,
.price-text {
  font-size: 20rpx;
  font-weight: 500;
}

/* 博物馆操作 */
.museum-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

.action-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.favorite-date {
  font-size: 20rpx;
  color: #999;
}

.rating {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.rating-text {
  font-size: 20rpx;
  color: #FF9800;
  font-weight: 600;
}

.star {
  font-size: 18rpx;
}

.action-buttons {
  display: flex;
  gap: 8rpx;
}

.unfavorite-btn {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.unfavorite-btn:active {
  background: #ffebee;
  transform: scale(0.9);
}

/* 展览列表 */
.exhibitions-section {
  background: #f5f5f5;
  padding: 0 32rpx 32rpx;
}

.exhibition-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 展览卡片 */
.exhibition-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

/* 卡片右上收藏标签（与详情页样式保持一致风格） */
.collect-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: #ffb3b3;
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.exhibition-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* 展览图片 */
.exhibition-image {
  position: relative;
  height: 180rpx;
}

.exhibition-image .image {
  width: 100%;
  height: 100%;
}

.status-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  color: white;
}

.status-badge.status-ongoing {
  background: #4CAF50;
}

.status-badge.status-upcoming {
  background: #2196F3;
}

.status-badge.status-ended {
  background: #999;
}

.status-text {
  font-size: 20rpx;
  color: white;
  font-weight: 500;
}

/* 展览内容 */
.exhibition-content {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.exhibition-main {
  flex: 1;
}

.exhibition-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.exhibition-museum {
  font-size: 24rpx;
  color: #ff8fa3;
  display: block;
  margin-bottom: 8rpx;
}

.exhibition-time {
  margin-bottom: 12rpx;
}

.time-text {
  font-size: 22rpx;
  color: #666;
}

/* 展览标签 */
.exhibition-meta {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

/* 展览操作 */
.exhibition-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
  background: #f5f5f5;
  border-radius: 32rpx 32rpx 0 0;
  min-height: 60vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 24rpx;
  color: #ccc;
  display: block;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .museum-content,
  .exhibition-content {
    padding: 20rpx;
  }
  
  .museum-name,
  .exhibition-title {
    font-size: 26rpx;
  }
  
  .museum-image,
  .exhibition-image {
    height: 160rpx;
  }
}