/* feedback.wxss */
page {
  background-color: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
}

/* 页面头部 */
.feedback-header {
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  padding: 40rpx 32rpx;
  color: white;
}

.header-content {
  text-align: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 通用区域样式 */
.feedback-section {
  margin: 40rpx 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 反馈类型选择 */
.type-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.type-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.type-item.selected {
  background: #ffb3b3;
  border-color: #ff6b6b;
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 107, 0.3);
}

.type-icon {
  margin-bottom: 16rpx;
}

.type-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.type-item.selected .type-text {
  color: #fff;
}

.type-check {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
}

/* 反馈内容输入 */
.content-input {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.char-count {
  position: absolute;
  bottom: 16rpx;
  right: 24rpx;
}

.count-text {
  font-size: 24rpx;
  color: #999;
}

/* 联系方式输入 */
.contact-input {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

/* 提交按钮区域 */
.submit-section {
  margin: 40rpx 32rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.clear-btn {
  flex: 1;
  background: #fff;
  border: 2rpx solid #ffb3b3;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
}

.clear-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.clear-text {
  font-size: 28rpx;
  color: #ff8fa3;
  font-weight: 500;
}

.submit-btn {
  flex: 2;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

.submit-btn:active {
  transform: scale(0.98);
}

.submit-btn.submitting {
  opacity: 0.7;
  transform: none;
}

.submit-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
}

/* 温馨提示 */
.tips-section {
  margin: 0 32rpx 40rpx;
}

.tips-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 12rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}