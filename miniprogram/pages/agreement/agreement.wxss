/**agreement.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
}

/* 协议标题 */
.header-section {
  background: #fff;
  padding: 40rpx 32rpx;
  text-align: center;
  border-bottom: 2rpx solid #f0f0f0;
}

.agreement-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.last-updated {
  font-size: 22rpx;
  color: #666;
}

/* 协议内容 */
.content-section {
  margin: 40rpx 32rpx;
}

.welcome-text {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.welcome-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

/* 协议条款 */
.sections-container {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-item {
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-item:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.section-content {
  font-size: 24rpx;
  color: #555;
  line-height: 1.8;
  white-space: pre-line;
  text-align: justify;
}

/* 联系信息 */
.contact-section {
  margin: 0 32rpx 40rpx;
}

.contact-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.contact-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.contact-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.contact-item {
  font-size: 24rpx;
  color: #666;
  background: #f8f8f8;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
}

/* 返回顶部 */
.back-to-top {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  background: #666;
  border-radius: 50rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.back-text {
  font-size: 22rpx;
  color: white;
  margin-left: 8rpx;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}
