/* checkin-action.wxss */
page {
  background: #f5f5f5;
}

.checkin-action-container {
  height: 100vh;
  padding: 0;
}

/* 博物馆信息卡片 */
.museum-info-card {
  background: white;
  margin: 20rpx 32rpx 32rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.museum-header {
  display: flex;
  gap: 24rpx;
  padding: 32rpx 32rpx 24rpx;
}

.museum-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.museum-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.museum-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.museum-distance {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.distance-text {
  font-size: 24rpx;
  color: #999;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-dot.status-available {
  background: #52c41a;
}

.status-dot.status-unavailable {
  background: #ff4d4f;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.museum-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

/* 打卡状态提示条 */
.checkin-status-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  margin: 0;
}

.checkin-status-bar.status-success {
  background: linear-gradient(135deg, #52c41a, #73d13d);
}

.checkin-status-bar.status-warning {
  background: linear-gradient(135deg, #faad14, #ffc53d);
}

.status-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.status-message {
  font-size: 26rpx;
  color: white;
  line-height: 1.4;
  flex: 1;
}

/* 卡片样式 */
.section-card {
  background: white;
  margin: 0 32rpx 32rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.required-star {
  color: #ff4d4f;
  margin-left: 4rpx;
  font-weight: bold;
}

.photo-count {
  font-size: 24rpx;
  color: #999;
}

/* 拍照区域 */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: flex-start;
}

.photo-item {
  width: calc((100% - 32rpx) / 3); /* 每行显示3张，减去2个gap的宽度 */
  height: 180rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.photo-image {
  width: 100%;
  height: 100%;
}

.photo-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.add-photo-btn {
  width: calc((100% - 32rpx) / 3); /* 与照片项保持一致的宽度 */
  height: 180rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.add-icon {
  font-size: 48rpx;
  color: #d9d9d9;
}

.empty-photo {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  display: block;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
  display: block;
}

.take-photo-btn {
  display: inline-block;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 打卡感受 */
.feeling-input {
  width: 100%;
  min-height: 200rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  border: none;
  margin-top: 24rpx;
  box-sizing: border-box;
}

.input-count {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  margin-top: 12rpx;
  display: block;
}

/* 评分 */
.rating-section {
  margin-bottom: 32rpx;
}

.star-rating {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.star-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  font-size: 24rpx;
  white-space: nowrap;
  flex-shrink: 0;
  cursor: pointer;
}

.star-item.star-selected {
  background: #ffebee;
  border-color: #ffb3b3;
  color: #ff8fa3;
}

.star-item:active {
  transform: scale(0.95);
}

.star-icon {
  font-size: 28rpx;
  color: inherit;
}

.star-text {
  font-size: 24rpx;
  color: inherit;
}

/* 心情选择 */
.mood-section {
  margin-bottom: 32rpx;
}

.mood-options {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.mood-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  font-size: 24rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.mood-item.mood-selected {
  background: #ffebee;
  border-color: #ffb3b3;
  color: #ff8fa3;
}

.mood-emoji {
  font-size: 28rpx;
}

.mood-text {
  font-size: 24rpx;
  color: inherit;
}

/* 天气选择 */
.weather-section {
  margin-bottom: 0;
}

.weather-options {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.weather-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  font-size: 24rpx;
  white-space: nowrap;
  flex-shrink: 0;
}

.weather-item.weather-selected {
  background: #ffebee;
  border-color: #ffb3b3;
  color: #ff8fa3;
}

.weather-emoji {
  font-size: 28rpx;
}

.weather-text {
  font-size: 24rpx;
  color: inherit;
}

/* 同行伙伴 */
.companion-input {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  align-items: center;
}

.companion-field {
  flex: 1;
  height: 72rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: none;
}

.add-companion-btn {
  height: 72rpx;
  padding: 0 32rpx;
  background: #ffb3b3;
  color: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.companion-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 24rpx;
}

.companion-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #e6f7ff;
  color: #ff8fa3;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.companion-name {
  font-weight: 500;
}

.companion-delete {
  color: #999;
  font-size: 28rpx;
  font-weight: bold;
  cursor: pointer;
}

/* 标签 */
.tag-input {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  align-items: center;
}

.tag-field {
  flex: 1;
  height: 72rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  border: none;
}

.add-tag-btn {
  height: 72rpx;
  padding: 0 32rpx;
  background: #ffb3b3;
  color: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 24rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: #f0f9ff;
  color: #0369a1;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.tag-text {
  font-weight: 500;
}

.tag-delete {
  color: #999;
  font-size: 28rpx;
  font-weight: bold;
  cursor: pointer;
}

/* 底部按钮 */
.action-buttons {
  padding: 0 32rpx 32rpx;
  display: flex;
  gap: 16rpx;
}

.save-draft-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  background: #f5f5f5;
  color: #666;
  border: 2rpx solid #e8e8e8;
}

.save-draft-btn:active {
  transform: scale(0.98);
  background: #ebebeb;
}

.checkin-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.checkin-btn.btn-enabled {
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.checkin-btn.btn-enabled:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.checkin-btn.btn-disabled {
  background: #f5f5f5;
  color: #bfbfbf;
  border: 2rpx solid #e8e8e8;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}