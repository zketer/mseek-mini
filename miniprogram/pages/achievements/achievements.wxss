/* achievements.wxss */
page {
  background: #f5f5f5;
}

.page-container {
  min-height: 100vh;
}

/* 成就概览 */
.achievement-header {
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #ffb3b3, #ffd1d1);
  border-radius: 16rpx;
  margin: 20rpx 16rpx;
  color: white;
}

.header-content {
  text-align: center;
}

.stats-overview {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 40rpx;
}

/* 进度条 */
.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-fill {
  height: 100%;
  background: white;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}



/* 分类标签 */
.category-section {
  padding: 0 32rpx 24rpx;
}

.category-tabs {
  white-space: nowrap;
}

.category-tab {
  display: inline-block;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.category-tab.active {
  background: white;
  color: #ff8fa3;
}

.tab-name {
  font-size: 26rpx;
  font-weight: 500;
}

.category-tab.active .tab-name {
  color: #ff8fa3;
}

.tab-count {
  font-size: 22rpx;
  margin-left: 8rpx;
  opacity: 0.8;
}

.category-tab.active .tab-count {
  color: #ff8fa3;
  opacity: 1;
}

/* 成就列表 */
.achievements-section {
  background: #f5f5f5;
  border-radius: 32rpx 32rpx 0 0;
  min-height: 80vh;
  padding: 32rpx;
}

.achievement-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

/* 成就卡片 */
.achievement-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.achievement-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.achievement-card.locked {
  background: #f8f8f8;
  opacity: 0.7;
}

/* 稀有度边框 */
.rarity-border {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 20rpx;
  pointer-events: none;
}

.achievement-card.rarity-rare .rarity-border {
  border: 3rpx solid #4CAF50;
  background: linear-gradient(45deg, transparent 30%, rgba(76, 175, 80, 0.1) 70%);
}

.achievement-card.rarity-epic .rarity-border {
  border: 3rpx solid #9C27B0;
  background: linear-gradient(45deg, transparent 30%, rgba(156, 39, 176, 0.1) 70%);
}

.achievement-card.rarity-legendary .rarity-border {
  border: 3rpx solid #FF9800;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 152, 0, 0.1) 70%);
  box-shadow: 0 0 20rpx rgba(255, 152, 0, 0.3);
}

/* 成就图标 */
.achievement-icon {
  text-align: center;
  margin-bottom: 16rpx;
}

.icon-emoji {
  font-size: 48rpx;
  display: block;
}

.locked-icon .icon-emoji {
  filter: grayscale(1);
  opacity: 0.5;
}

/* 成就信息 */
.achievement-info {
  text-align: center;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.achievement-card.locked .achievement-name {
  color: #999;
}

.achievement-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
  display: block;
  margin-bottom: 16rpx;
}

.achievement-card.locked .achievement-desc {
  color: #bbb;
}

/* 进度条 */
.progress-section {
  margin-top: 16rpx;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.progress-label {
  font-size: 20rpx;
  color: #999;
}

.progress-numbers {
  font-size: 20rpx;
  color: #ff8fa3;
  font-weight: 600;
}

.mini-progress-bar {
  height: 4rpx;
  background: #f0f0f0;
  border-radius: 2rpx;
  overflow: hidden;
}

.mini-progress-fill {
  height: 100%;
  background: #ffb3b3;
  border-radius: 2rpx;
  transition: width 0.3s ease;
}

/* 解锁时间 */
.unlock-date {
  margin-top: 12rpx;
}

.date-text {
  font-size: 20rpx;
  color: #4CAF50;
  font-weight: 500;
}

/* 稀有度标签 */
.rarity-tag {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
}

.rarity-tag.rarity-rare {
  background: #4CAF50;
  color: white;
}

.rarity-tag.rarity-epic {
  background: #9C27B0;
  color: white;
}

.rarity-tag.rarity-legendary {
  background: #FF9800;
  color: white;
}

.rarity-text {
  font-size: 18rpx;
  font-weight: 600;
}

/* 解锁效果 */
.unlock-effect {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
}

.unlock-text {
  font-size: 20rpx;
  animation: sparkle 2s infinite;
}

@keyframes sparkle {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.2); }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 32rpx;
}

.empty-subtitle {
  font-size: 24rpx;
  color: #ccc;
  display: block;
}


/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .achievement-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .achievement-card {
    padding: 24rpx 20rpx;
  }
  
  .icon-emoji {
    font-size: 40rpx;
  }
}

/* 长按提示 */
.achievement-card.unlocked::after {
  content: '';
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  width: 6rpx;
  height: 6rpx;
  background: #4CAF50;
  border-radius: 50%;
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .achievements-section {
    background: #1a1a1a;
  }
  
  .achievement-card {
    background: #2a2a2a;
  }
  
  .achievement-card.locked {
    background: #333;
  }
  
  .achievement-name {
    color: #fff;
  }
  
  .achievement-desc {
    color: #ccc;
  }
  
  .achievement-card.locked .achievement-name {
    color: #666;
  }
  
  .achievement-card.locked .achievement-desc {
    color: #555;
  }
}
