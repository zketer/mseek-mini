/**qualification.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
}

/* 通用样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 营业执照部分 */
.license-section {
  margin: 40rpx 32rpx;
}

.license-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.license-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  border: 2rpx solid #f0f0f0;
}

.license-note {
  margin-top: 16rpx;
  text-align: center;
}

.note-text {
  font-size: 22rpx;
  color: #999;
}

/* 公司信息部分 */
.company-section {
  margin: 0 32rpx 40rpx;
}

.info-list {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  padding: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 200rpx;
  margin-right: 20rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
  line-height: 1.4;
}

.info-value-row {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.copy-hint {
  font-size: 22rpx;
  color: #ff8fa3;
  margin-top: 8rpx;
}

/* 查询部分 */
.query-section {
  margin: 0 32rpx 40rpx;
}

.query-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.query-content {
  flex: 1;
}

.query-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.query-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.query-arrow {
  margin-left: 16rpx;
}

/* 更新说明 */
.update-note {
  margin: 0 32rpx 40rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.note-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.note-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部间距 */
.bottom-spacing {
  height: 40rpx;
}
